---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  .navbar {
    @apply flex gap-8 items-center justify-center py-4;
  }

  .navbar-link {
    @apply text-4xl;
  }

  .row {
    @apply flex gap-4 items-center justify-between bg-neutral-900;
  }
</style>
